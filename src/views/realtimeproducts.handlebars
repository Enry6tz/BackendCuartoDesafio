<div class="container mt-5">
    <div class="row">
        <div class="col-sm-4">
            <h1>Productos en tiempo real</h1>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="title">Titulo</label>
                        <input type="text" class="form-control" id="title" placeholder="Ingrese el titulo" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="description">Descripción</label>
                        <input type="text" class="form-control" id="description" placeholder="Ingrese la descripcion"
                            required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="price">Precio</label>
                        <input type="number" class="form-control" id="price" placeholder="Ingrese el precio" step="0.01"
                            min="0" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="thumbnails">URL imagen</label>
                        <input type="url" class="form-control" id="thumbnails" placeholder="https://via.placeholder.com/150" value="https://via.placeholder.com/150" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="code">Codigo</label>
                        <input type="text" class="form-control" id="code" placeholder="Ingrese el codigo" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="category">Categoria</label>
                        <input type="text" class="form-control" id="category" placeholder="Ingrese la categoría"
                            required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="stock">Stock</label>
                        <input type="number" class="form-control" id="stock" placeholder="Ingrese el stock" min="0"
                            required>
                    </div>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="status" required>
                    <label class="form-check-label" for="gridCheck">
                        Estado
                    </label>
                </div>
                <button type="submit" id="btnEnviar" class="btn btn-primary mt-3">Enviar</button>
                <p>
                    <a href="http://localhost:8080/" class="volver">Volver</a>
                </p>
            </form>

        </div>
        <div class="col-sm-8 card-container ">
            <div class="row " id="contenedorProductos">
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.socket.io/4.7.3/socket.io.min.js"
    integrity="sha384-+miq58Ltmjm+SSP5g8Ok6dpMO/6R4n8xe/x1Yj0Bdb9kiEz25LTnWv/GZQTRQamg"
    crossorigin="anonymous"></script>
